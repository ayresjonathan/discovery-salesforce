        // ==================== FUNCTIONS ====================
        function loadData() {
            const saved = localStorage.getItem(STORAGE_KEY);
            if (saved) {
                try {
                    respondents = JSON.parse(saved);
                    if (respondents.length > 0) {
                        currentRespondentId = respondents[0].id;
                    }
                } catch (e) {
                    console.error('Erro ao carregar dados:', e);
                }
            }
            render();
        }

        function saveData() {
            try {
                localStorage.setItem(STORAGE_KEY, JSON.stringify(respondents));
                updateSyncStatus(true);
            } catch (e) {
                console.error('Erro ao salvar dados:', e);
                updateSyncStatus(false);
            }
        }

        function updateSyncStatus(synced) {
            const status = document.getElementById('syncStatus');
            if (synced) {
                status.textContent = '‚úì Sincronizado';
                status.classList.add('synced');
                lastSyncTime = Date.now();
                setTimeout(() => {
                    status.classList.remove('synced');
                    status.textContent = 'Sincronizando...';
                }, 2000);
            }
        }

        function addRespondent() {
            const name = document.getElementById('respondentNameInput').value.trim();
            if (!name) {
                showMessage('Por favor, digite um nome', false);
                return;
            }
            if (respondents.length >= 5) {
                alert('Limite de 5 respondentes atingido');
                return;
            }

            const newRespondent = {
                id: Date.now(),
                name: name,
                createdAt: new Date().toLocaleDateString('pt-BR'),
                answers: {}
            };

            respondents.push(newRespondent);
            currentRespondentId = newRespondent.id;
            document.getElementById('respondentNameInput').value = '';
            saveData();
            render();
            showMessage('‚ú® Respondente criado com sucesso!', true);
        }

        function deleteRespondent(id) {
            if (confirm('Tem certeza que quer deletar este respondente?')) {
                respondents = respondents.filter(r => r.id !== id);
                if (currentRespondentId === id) {
                    currentRespondentId = respondents.length > 0 ? respondents[0].id : null;
                }
                saveData();
                render();
            }
        }

        function selectRespondent(id) {
            currentRespondentId = id;
            render();
        }

        function updateAnswer(questionId, value) {
            const respondent = respondents.find(r => r.id === currentRespondentId);
            if (respondent) {
                respondent.answers[questionId] = value;
                saveData();
                updateProgress();
                showMessage('‚úì Resposta salva', true);
            }
        }

        function toggleBlock(event, index) {
            // Previne que cliques nas textareas disparem o toggle
            if (event.target.tagName === 'TEXTAREA' || event.target.tagName === 'INPUT') {
                return;
            }

            // S√≥ toggle se clicou no header
            if (!event.currentTarget.classList.contains('block-header')) {
                return;
            }

            const content = document.getElementById(`block-${index}`);
            const header = document.getElementById(`header-${index}`);
            
            if (content.classList.contains('open')) {
                content.classList.remove('open');
                header.classList.remove('expanded');
            } else {
                content.classList.add('open');
                header.classList.add('expanded');
            }
        }

        function switchTab(tab) {
            document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
            document.getElementById(tab).classList.add('active');

            document.querySelectorAll('.tab-btn').forEach(el => el.classList.remove('active'));
            event.target.classList.add('active');

            if (tab === 'analysis') {
                renderAnalysis();
            }
        }

        function showMessage(text, success) {
            const msg = document.getElementById('successMsg');
            msg.textContent = text;
            msg.classList.toggle('hidden', false);
            setTimeout(() => msg.classList.add('hidden'), 2500);
        }

        function updateProgress() {
            const respondent = respondents.find(r => r.id === currentRespondentId);
            if (!respondent) return;

            const answered = Object.keys(respondent.answers).length;
            const total = questionBlocks.reduce((sum, b) => sum + b.questions.length, 0);
            const percent = Math.round((answered / total) * 100);

            document.getElementById('progressText').textContent = `${answered}/${total}`;
            document.getElementById('progressPercent').textContent = `${percent}%`;
            document.getElementById('progressBar').style.width = `${percent}%`;
        }

        function render() {
            document.getElementById('count').textContent = respondents.length;

            const listContainer = document.getElementById('respondentList');
            if (respondents.length === 0) {
                listContainer.innerHTML = '';
                document.getElementById('emptyState').style.display = 'block';
                document.getElementById('progressCard').classList.add('hidden');
                document.getElementById('questionsContainer').innerHTML = '';
                document.getElementById('currentName').textContent = '‚Äî';
                return;
            }

            document.getElementById('emptyState').style.display = 'none';
            document.getElementById('progressCard').classList.remove('hidden');

            let html = '';
            respondents.forEach(r => {
                const answered = Object.keys(r.answers).length;
                html += `<button class="respondent-btn ${r.id === currentRespondentId ? 'active' : ''}" onclick="selectRespondent(${r.id})">${r.name} (${answered}/49)</button>`;
            });
            listContainer.innerHTML = html;

            const current = respondents.find(r => r.id === currentRespondentId);
            if (!current) return;

            document.getElementById('currentName').textContent = current.name;
            updateProgress();

            const qContainer = document.getElementById('questionsContainer');
            qContainer.innerHTML = '';

            questionBlocks.forEach((block, idx) => {
                const answered = block.questions.filter(q => current.answers[q.id]).length;
                
                let blockHtml = `
                    <div class="question-block">
                        <div class="block-header" id="header-${idx}" onclick="toggleBlock(event, ${idx})">
                            <div class="block-title">
                                <span class="block-emoji">${block.emoji}</span>
                                <div>
                                    <div class="block-name">${block.title}</div>
                                    <div class="block-count">${answered}/${block.questions.length} quest√µes</div>
                                </div>
                            </div>
                            <span class="chevron">‚ñº</span>
                        </div>
                        <div class="block-content" id="block-${idx}">
                `;

                block.questions.forEach(q => {
                    const value = current.answers[q.id] || '';
                    blockHtml += `
                        <div class="question">
                            <div class="question-text">${q.text}</div>
                            <textarea onchange="updateAnswer('${q.id}', this.value)" placeholder="Digite sua resposta aqui...">${value}</textarea>
                        </div>
                    `;
                });

                blockHtml += '</div></div>';
                qContainer.innerHTML += blockHtml;
            });

            const listView = document.getElementById('respondentsList');
            let listHtml = '';
            respondents.forEach(r => {
                const answered = Object.keys(r.answers).length;
                const percent = Math.round((answered / 49) * 100);
                listHtml += `
                    <div class="card">
                        <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 12px;">
                            <div>
                                <h3>${r.name}</h3>
                                <p style="font-size: 12px; color: #7f8c8d;">Criado em ${r.createdAt}</p>
                            </div>
                            <button class="delete-btn" onclick="deleteRespondent(${r.id})">Excluir</button>
                        </div>
                        <div style="margin-bottom: 10px;">
                            <div style="display: flex; justify-content: space-between; margin-bottom: 6px; font-size: 12px;">
                                <span>Progresso: ${answered}/49</span>
                                <span style="font-weight: 700; color: #3498db;">${percent}%</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: ${percent}%"></div>
                            </div>
                        </div>
                        <button class="tab-btn" onclick="selectRespondent(${r.id}); switchTab('survey')">Continuar</button>
                    </div>
                `;
            });
            listView.innerHTML = listHtml;
        }

        function renderAnalysis() {
            const container = document.getElementById('analysisContainer');
            
            if (respondents.length === 0) {
                container.innerHTML = '<div class="empty-state"><p>Nenhum respondente coletado</p></div>';
                return;
            }

            const total = respondents.reduce((sum, r) => sum + Object.keys(r.answers).length, 0);
            const avg = respondents.length > 0 ? Math.round((total / (respondents.length * 49)) * 100) : 0;

            let html = `
                <div class="stat-grid">
                    <div class="stat-card">
                        <div class="stat-label">üë• Respondentes</div>
                        <div class="stat-value">${respondents.length}</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">‚úçÔ∏è Respostas</div>
                        <div class="stat-value">${total}</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">üìà M√©dia</div>
                        <div class="stat-value">${avg}%</div>
                    </div>
                </div>

                <div class="card">
                    <h3>Detalhes</h3>
                    <table>
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Respostas</th>
                                <th>Conclus√£o</th>
                            </tr>
                        </thead>
                        <tbody>
            `;

            respondents.forEach(r => {
                const answered = Object.keys(r.answers).length;
                const percent = Math.round((answered / 49) * 100);
                html += `
                    <tr>
                        <td style="font-weight: 600;">${r.name}</td>
                        <td>${answered}/49</td>
                        <td>
                            <div style="display: flex; gap: 8px; align-items: center;">
                                <div class="progress-bar" style="flex: 1; min-width: 60px;">
                                    <div class="progress-fill" style="width: ${percent}%"></div>
                                </div>
                                <span style="font-weight: 700; color: #3498db; font-size: 12px; min-width: 30px;">${percent}%</span>
                            </div>
                        </td>
                    </tr>
                `;
            });

            html += `
                        </tbody>
                    </table>
                </div>

                <div class="cta-box">
                    <h3>üìä Pr√≥ximos Passos</h3>
                    <p style="margin-top: 10px; font-size: 13px; color: #555;">Quando todos os respondentes completarem, voc√™ ter√° dados consolidados para desenhar o TO-BE e o roadmap de transforma√ß√£o!</p>
                </div>
            `;

            container.innerHTML = html;
        }

        // ==================== INIT ====================
        window.addEventListener('DOMContentLoaded', loadData);
        
        setInterval(() => {
            if (document.visibilityState === 'visible') {
                render();
            }
        }, SYNC_INTERVAL);
    </script>
</body>
</html>
